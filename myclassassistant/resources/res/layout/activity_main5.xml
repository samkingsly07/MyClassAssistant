<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="#ffffff" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="10">
            <EditText android:textSize="20sp" android:id="@+id/register_" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Admission Number" android:layout_weight="2"/>
            <Button android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/loadForEdit" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="LOAD" android:layout_weight="8"/>
        </LinearLayout>
        <EditText android:textSize="20sp" android:id="@+id/edit_name_" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Name"/>
        <EditText android:textSize="20sp" android:id="@+id/Class" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Class"/>
        <EditText android:textSize="20sp" android:id="@+id/address" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Address"/>
        <EditText android:textSize="20sp" android:id="@+id/contact" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Contact" android:inputType="numberDecimal"/>
        <EditText android:textSize="20sp" android:id="@+id/roll" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Roll Number" android:inputType="numberDecimal"/>
        <Button android:textSize="16dp" android:textStyle="bold" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/buttonSAVEEDITS" android:background="@color/colorPrimary" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:text="SAVE CHANGES"/>
    </LinearLayout>
</RelativeLayout>
