<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="#ffffff" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <Spinner android:textSize="20sp" android:id="@+id/spinner" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp"/>
        <EditText android:textSize="20sp" android:id="@+id/edit_name" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Name"/>
        <EditText android:textSize="20sp" android:id="@+id/roll" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Roll Number" android:inputType="numberDecimal"/>
        <EditText android:textSize="20sp" android:id="@+id/register" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Admission Number"/>
        <EditText android:textSize="20sp" android:id="@+id/contact" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Contact" android:inputType="phone"/>
        <Button android:textSize="16dp" android:textStyle="bold" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/buttonSAVE" android:background="@color/colorPrimary" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:text="SAVE"/>
    </LinearLayout>
</RelativeLayout>
