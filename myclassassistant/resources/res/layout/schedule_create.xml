<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <Spinner android:layout_gravity="center_horizontal" android:id="@+id/daySelector" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Spinner android:layout_gravity="center_horizontal" android:id="@+id/classSelector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/daySelector"/>
            <EditText android:id="@+id/subjectName" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:hint="Subject Name" android:layout_below="@+id/classSelector"/>
            <TimePicker android:id="@+id/timePicker" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/subjectName"/>
            <Button android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/saveBUTTON_SCHEDULE" android:background="@color/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="SAVE" android:layout_below="@+id/timePicker"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
